<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <%- include('./partials/nav') %>
    <div class="row main__container">
        <!-- User Profile Card -->
        <section class="card user__profile__card">
            <% if(!currentUser.profileImage.filename) { %>
                <img class="default__profile__image" src="/images/1594697689234-rednose-blank-profile-picture.png" alt="profile image">
            <% } else { %>
                <img class='profile__image' src="/images/<%= currentUser.profileImage.filename%>" alt="profile image">
            <% } %>
            <a class="edit__modal__anchor anchor" href="#" data-toggle="modal" data-target="#profilePhotoModal">edit photo</a>
            <a class="edit__modal__anchor anchor" href="#" data-toggle="modal" data-target="#editModal"> edit profile</a>
            <h5 class="card-title"><%= currentUser.firstName %> <%= currentUser.lastName %></h5>
        </section>
        <!-- End User Profile Card -->
        <div class="profile__column">
            <div class="profile__card__container">
                <% users.forEach( user => { %>
                    <section class="profile__card">
                        <img src="/images/<%=user.profileImage.filename%>" alt="" class="profile__image">
                        <h6 class='profile__card__text'><%= user.firstName %> <%= user.lastName %></h6>
                        <h6 class='profile__card__text'>
                            <%= user.location %></h6>
                        <h6 class='profile__card__text occupation'>
                            Occupation:
                            <% if(!user.title) { %>
                                unknown
                            <% } else { %>
                                 <%= user.title %>
                            <% } %>
                        </h6>
                    </section>
                <% }) %>
            </div>
        </div>
    </div>
    <footer class="page__footer">
        <h6>&copy; Bryan Kretz</h6>
    </footer>
</body>
</html>