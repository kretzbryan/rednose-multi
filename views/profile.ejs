<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Document</title>
</head>
<body>
    
<%- include('./partials/nav')%>
<div class="row main__container">
    <div class="column-secondary">
       <%- include('./partials/userCard') %>
    </div>


    <!-- Post Column -->
    <div class="column-primary">
        <section class="row card create__post">
        <img src="/images/<%= currentUser.profileImage.filename%>" alt="profile thumbnail" class="create__post__thumb">
            <a href='#' data-toggle="modal" data-target="#addPostModal" class='create__post__caption anchor'>Say Something!</a>
        </section>
        <% if(!currentUser.posts) { %>
            <h3>This profile has no posts!</h3>
        <% } else { %>
            <% currentUser.posts.forEach( post => { %>
                <section class="row card post__container">
                    <header class="row profile__header">
                        <div class="col-2 poster__thumb">
                            <% if( !currentUser.profileImage.filename ) { %>
                                <img src="/images/default-img.png" alt="profile thumbnail" class="image__thumb">
                            <% } else { %>
                                <img src="/images/<%= currentUser.profileImage.filename %>" alt="" class="image__thumb">
                            <% } %>
                        </div>
                        <div class="col-8 poster__name">
                            <a class='anchor' href="/profile/<%= post.user._id %>">
                                <p class='options'><%= currentUser.firstName %> <%= currentUser.lastName %></p>
                            </a>
                            <span class='timestamp' > 
                                
    
                                <% if (time.since(post.createdAt).secs() < 60) { %>
                                    <%= time.since(post.createdAt).secs() %> sec
                                <% } else if (time.since(post.createdAt).secs() >= 60  && time.since(post.createdAt).mins() < 60 ) { %>
                                    <%= time.since(post.createdAt).mins() %> min
                                <% } else if(time.since(post.createdAt).mins() >= 60 && time.since(post.createdAt).hours() < 24  ) { %>
                                    <%= time.since(post.createdAt).hours() %> h
                                <% } else if(time.since(post.createdAt).hours() >= 24 && time.since(post.createdAt).days() < 7  ) { %>
                                    <%= time.since(post.createdAt).days() %> d
                                <% } else { %>
                                    <%= time.since(post.createdAt).weeks() %> w
                                <% } %>
                            </span>
                        </div>
                        <div class="col-2 post__options">
                            <a class='anchor' href="#">
                                <i class="fa fa-cog options" aria-hidden="true"></i>
                            </a>
                        </div>
                    </header>
                    <section class="post__content">
                        <p><%= post.text %></p>
                    </section>
                    <% post.comment_doc.forEach(comment => { %>
                        <section class="row comment mt-2"> 
                            <header class="row profile__header">
                                <div class="col-2 comment__thumb">
                                    <% if( !comment.user.profileImage.filename ) { %>
                                        <img src="images/default-img.png" alt="profile thumbnail" class="comment__thumb">
                                    <% } else { %>
                                        <img src="images/<%= comment.user.profileImage.filename %>" alt="" class="comment__thumb">
                                    <% } %>
                                </div>
                                <div class="col poster__name">
                                    <a class='anchor' href="/profile/<%= comment.user._id %>">
                                        <p class='options'><%= comment.user.firstName %> <%= comment.user.lastName %></p>
                                    </a>
                                    <span class='timestamp' > 
    
                                        <% if (time.since(comment.createdAt).secs() < 60) { %>
                                            <%= time.since(comment.createdAt).secs() %> sec
                                        <% } else if (time.since(comment.createdAt).secs() >= 60  && time.since(comment.createdAt).mins() < 60 ) { %>
                                            <%= time.since(comment.createdAt).mins() %> min
                                        <% } else if(time.since(comment.createdAt).mins() >= 60 && time.since(comment.createdAt).hours() < 24  ) { %>
                                            <%= time.since(comment.createdAt).hours() %> h
                                        <% } else if(time.since(comment.createdAt).hours() >= 24 && time.since(comment.createdAt).days() < 7  ) { %>
                                            <%= time.since(comment.createdAt).days() %> d
                                        <% } else { %>
                                            <%= time.since(comment.createdAt).weeks() %> w
                                        <% } %>
                                    </span>
                                </div>
                                <div class="col-2 comment__options">
                                    <a class='anchor' href="#">
                                        <i class="fa fa-cog options" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </header>
                            <div class="comment__text">
                                <p><%= comment.text %></p>
                            </div>
                        </section> 
                        <% if(currentUser._id.toString() === comment.user._id.toString()) { %>
                            <!-- <footer class='options__footer'>
                                <a class='anchor options' href="#" data-target="#delete<%= comment._id %>CommentModal" data-toggle="modal"><i class="fas fa-trash-alt"></i></a>
                                <a class='anchor options' href="#" data-target="#edit<%= comment._id %>CommentModal" data-toggle="modal"><i class="fas fa-user-edit"></i></a>
                                
                            </footer> -->
    
    
                                <!-- Edit Comment Modal -->
                            <div class="modal fade" id="edit<%= comment._id %>CommentModal">
                                <div class="modal-dialog modal-dialog-centered modal-dialog modal-dialog-centered-centered">
                                    <div class="modal-content">
                                        <header class="modal-header">
                                            <h5 class="modal-title" id="edit__gig__title">Edit Comment </h5>
                                        </header>
                                        <div class="modal-body">
    
    
                                        <!-- Edit Comment Form-->
                                            <div class="edit__gig__container">
                                                <form action="post/comment/<%= comment._id %>?_method=PUT" method="POST">
                                                    <textarea name="content" placeholder="Say whats on your mind..." cols="45" rows="7"><%= comment.text %></textarea>
                                                    <footer class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-primary">Confirm</button>
                                                    </footer>
                                                </form>
                                                <!-- End Edit Comment Form -->
    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <!-- End Edit Comment Modal -->
    
    
                                    <!-- Delete Comment Modal -->
                            <div class="modal fade" id="delete<%= comment._id %>CommentModal">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <header class="modal-header">
                                            <h5 class="modal-title" id="edit__gig__title">Edit Gig </h5>
                                        </header>
                                        <div class="modal-body">
                                        <!-- Delete Comment Form-->
                                            <div class="delete__comment__container">
                                                <form action="post/comment/<%= comment._id %>?_method=DELETE" method="post">
                                                    <h4>Are you sure you want to delete this comment?</h4>
                                                    <footer class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button class='btn btn-primary'type=submit>Delete</button>
                                                    </footer>
                                                </form>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- End Delete Comment Modal -->
    
                        <% } %>
                    <% }) %>
                    <div class="row comment-form">
                        <form action="post/comment/<%= post._id %>" method='POST'>
                            <textarea name="text" id="" cols="50" rows="1" placeholder="Write a comment..."></textarea>
                            <input type="submit" value="">
                        </form>
                    </div>
                </section>
            <% }) %>
        <% } %>
        
    </div>
        <!-- End Posts -->
        
    
    <!-- Gig Column -->
    <div class="column-tertiary">
        <%- include('./partials/gig-nav') %>
    </div>
    <footer class="page__footer">
        <h6>&copy; Bryan Kretz</h6>
    </footer>
    <!-- MODALS -->
        

        <!-- Add Post Modal -->
        <div class="modal fade" id="addPostModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <header class="modal-header">
                        <h5 class="modal-title" id="editTitle">Create Post </h5>
                    </header>
                    <div class="modal-body">
                    <!-- Add Post Form-->
                        <div class="add__post__container">
                            <form action="home/add-post" method="POST">
                                <textarea name="content" placeholder="Say whats on your mind..." cols="45" rows="7"></textarea>
                                <input type="hidden" name="author" value='<%= profile._id %>'>
                                <footer class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Add Photo</button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        

        <!-- Add Gig Modal -->
        <div class="modal fade" id="addGigModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <header class="modal-header">
                        <h5 class="modal-title" id="add__gig__title">Create Gig </h5>
                    </header>
                    <div class="modal-body">
                    <!-- Add Gig Form-->
                        <div class="add__gig__container">
                            <form action="home/add-gig" method="POST">
                                <input type="text" name="title" placeholder='What are you offering?'>
                                <input type="text" name="location" placeholder="Where are you located?">
                                <textarea name="description" placeholder="Description..." cols="45" rows="4"></textarea>
                                <input type="hidden" name="author" value="<%= currentUser._id %>">
                                <footer class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Add Gig</button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        

        
        
        
        <!-- Edit Profile Picture Modal -->
        <div class="modal fade" id="profilePhotoModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <header class="modal-header">
                        <h5 class="modal-title" id="editTitle">Edit Profile Photo</h5>
                    </header>
                    <div class="modal-body">
                    <!-- Edit Profile Form-->
                        <div class="profile__photo__container">
                            <form action="home/upload-profile-image/?_method=PUT" method="POST" enctype="multipart/form-data">
                                <label class='col' for="profileImage">Choose image</label>
                                <input class='col' type="file" name='profileImage'>
                                <footer class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Add Photo</button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
          
          <!-- Edit Profile Modal -->
        <div class="modal fade" id="editModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editTitle">Edit Profile</h5>d
                    </div>
                    <div class="modal-body">
                    <!-- Edit Profile Form-->
                        <div class="edit__profile__container">
                            <form action='home/edit-profile/<%= currentUser._id %>?_method=PUT' method='POST'>
                                <section class="form-group row">
                                  <input class='col' type="text" name='firstName' value=<%= currentUser.firstName %>>
                                </section>
                                <section class="form-group row">
                                    <input class='col' type="text" name='lastName' value=<%= currentUser.lastName %>>
                                </section>
                                <section class="form-group row">
                                    <input class='col' type="text" name='title' placeholder='Occupation' value=<%= currentUser.title %>>
                                </section>
                                <section class="form-group row">
                                    <input class='col' type="text" name='certifications' placeholder='Certifications'>
                                </section>
                                <section class="form-group row">
                                    <input class='col' type="text" name='insurance' placeholder='Insurance'>
                                </section>
                                <footer class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>